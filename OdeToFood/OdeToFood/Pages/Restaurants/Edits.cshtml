@page "{id}"
@using OdeToFood.Pages.Restaurants

@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Restaurant.Name</h1>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id"/>
    <div>
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" /> @*tag helper*@
        <span asp-validation-for="Restaurant.Name"></span>
    </div>
    <div>
        <label asp-for="Restaurant.Cuisine"></label>
        <select asp-for="Restaurant.Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()">
            @*tag helper and html helper*@
        </select>
        <span asp-validation-for="Restaurant.Cuisine"></span>
    </div>
    <input type="submit" name="save" value="save" />
    <a asp-controller="Home" asp-action="Index">Home</a>
</form>